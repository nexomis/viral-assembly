{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/nexomis/rna-preprocessing/main/assets/anchors_schema.json",
    "title": "Sample sheet format for --anchors",
    "description": "Anchor fasta file IDs with paths",
    "type": "array",
    "items": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_]+$",
          "uniqueItems": true,
          "description": "Ref genome unique IDs (alphanum or _)"
        },
        "path": {
          "type": "string",
          "pattern": "\\.(fasta|fa|fna)(\\.)?(gz|z|gzip)?$",
          "format": "file-path",
          "description": "Path for fasta genome reference must be provided with the right extention(fasta, fa or fna), can be gziped."
        }
      },
      "required": ["id", "path"]
    }
  }