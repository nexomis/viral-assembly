manifest {
  author = "Abdelghafar Goumaidi"
  version = "0.1.0"
  defaultBranch = "main"
  name = "viral-assembly"
  description = "Assemble viral genome and perform the associated QC. Starting from raw reads and one pre-built reference database in standard format (cf. README.md)."
  homePage = "https://github.com/nexomis/viral-assembly"
  mainScript = "main.nf"
  nextflowVersion = ">=23.10.0"
}

plugins {
    id 'nf-validation@1.1.3'
}

params {
  help = false

  // Input/Output options
  out_dir = "./out_dir"
  publish_dir_mode = "link"
  save_fastp = false
  input = null

  // Global worflow options
  //biocontainers_registry = 'quay.io'
  skip_primary = false
  skip_host_filtering = false
  skip_abacas = false
  skip_bowtie2 = false
  skip_quast = false

  // Mandatory parameters (the names should correspond to the ones given on the main workflow)

  //Primary parameters
  num_reads_sample_qc = 500000
  kraken2_db = null

  // fastp options

  trim_poly_g = true
  trim_poly_x = true
  min_avg_qual = 28
  min_len = 41
  cut_right_window_size = 4
  cut_right_mean_qual = 20
  cut_tail_window_size = 4
  cut_tail_mean_qual = 25

  // kraken2 options

  // abacas options
  abacas_MUMmer_program = 'nucmer'

  // bowtie2 mapping options
  bowtie2_mode = "end-to-end"

  // Resource options (the names must be conserved cf. modules/config/process/labels.config)
  ncpus_low = 4
  ncpus_med = 8
  ncpus_high = 16
  mem_high = "28.GB"
  spades_memory = 28
  kraken2_memory = 10
  
}

timestamp = new Date().format("yyyy-MM-dd_HH'h'mm'm'ss's'")

includeConfig "modules/config/process/labels.config"
includeConfig "modules/config/profiles.config"
includeConfig "conf/publish.conf"
includeConfig "conf/ext.conf"
includeConfig "modules/config/dag.config"
includeConfig "modules/config/report.config"
includeConfig "modules/config/timeline.config"
includeConfig "conf/resources.conf"